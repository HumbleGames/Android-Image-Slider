<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:focusable="false" android:baselineAligned="false">
    <Button android:id="@+id/btnMoreMain" android:layout_width="wrap_content" android:layout_height="30dp"
            android:paddingTop="2dp" android:paddingBottom="2dp" android:background="@drawable/button_background"
            android:textColor="#ffffff" android:paddingLeft="10dp" android:paddingRight="10dp" android:text="@string/btn_more"
            android:layout_alignTop="@+id/btnClose" android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" android:layout_margin="15dp"/>
    <GridView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/grid_view"
              android:layout_width="fill_parent" android:layout_height="fill_parent" android:numColumns="auto_fit"
              android:gravity="center" android:stretchMode="columnWidth" android:background="#000000"
            />
</LinearLayout>